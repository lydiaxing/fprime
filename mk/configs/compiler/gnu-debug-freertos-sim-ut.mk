$(UT_FLAGS)

CXXFLAGS := $(DEBUG) \
$(FREERTOS_SIM_GNU_CXXFLAGS) \
$(FREERTOS_SIM_GNU_INCLUDES) \
$(FREERTOS_SIM_FLAGS_COMMON) \
$(FREERTOS_SIM_INCLUDES_COMMON) \
$(COVERAGE) \
$(UT_FLAGS)

LINK_BIN_FLAGS := $(LINK_BIN_FLAGS) $(COVERAGE)
endif

